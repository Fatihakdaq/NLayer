@model EntityLayer.Model.Login.LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container-fluid d-flex justify-content-center align-items-center min-vh-100"
     style="background-image: url('/Images/abstract-digital-grid-black-background.jpg'); background-size: cover; background-position: center;">

    <div class="card shadow p-4" style="width: 100%; max-width: 400px; border-radius: 10px; background-color: rgba(255, 255, 255, 0.8);">
        <h2 class="mb-4 text-center text-primary">Giriş Yap</h2>
        <form method="post" asp-action="Login" asp-controller="Account">
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control form-control-lg" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control form-control-lg" placeholder="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-lg w-100">Giriş Yap</button>
        </form>
        <div class="text-center mt-3">
            <a href="#" class="text-decoration-none">Şifremi Unuttum</a>
        </div>
    </div>
</div>




<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
