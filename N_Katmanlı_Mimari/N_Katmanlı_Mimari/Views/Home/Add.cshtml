@model EntityLayer.Concrete.HomePage

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>HomePage Bilgisi Ekle</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Title">Başlık</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubTitle">Alt Başlık</label>
        <input asp-for="SubTitle" class="form-control" />
        <span asp-validation-for="SubTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ButtonSubTitle">Buton Alt Başlık</label>
        <input asp-for="ButtonSubTitle" class="form-control" />
        <span asp-validation-for="ButtonSubTitle" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
