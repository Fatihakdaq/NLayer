@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<div class="hero-section bg-primary text-white text-center py-5">
    <h1>Havalimanı Otelimize Hoş Geldiniz</h1>
    <p>Konforlu konaklama, mükemmel hizmet ve uygun fiyatlar</p>
    <!-- Button to trigger modal -->
    <button type="button" class="btn btn-light mt-3" data-bs-toggle="modal" data-bs-target="#reservationModal">
        Şimdi Rezervasyon Yapın
    </button>
</div>

<!-- Odalar Section -->
<div class="container my-5">
    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <img src="https://www.keplerclub.com/images/_banner/1102023203053780.jpg" class="card-img-top" alt="Oda 1">
                <div class="card-body">
                    <h5 class="card-title">Tek Kişilik Oda</h5>
                    <p class="card-text">Konforlu ve modern tek kişilik odalar.</p>
                    <a href="#" class="btn btn-primary">Detayları Gör</a>
                </div>
            </div>
        </div>
        <!-- Diğer oda kartları... -->
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="reservationModal" tabindex="-1" aria-labelledby="reservationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reservationModalLabel">Rezervasyon Formu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" action="/Reservation/Add">
                    <div class="mb-3">
                        <label for="Name" class="form-label">Name</label>
                        <input type="text" id="Name" name="Name" class="form-control" placeholder="Name" required />
                    </div>
                    <div class="mb-3">
                        <label for="SurName" class="form-label">Surname</label>
                        <input type="text" id="SurName" name="SurName" class="form-control" placeholder="Surname" required />
                    </div>
                    <div class="mb-3">
                        <label for="Gender" class="form-label">Gender</label>
                        <select id="Gender" name="Gender" class="form-select" required>
                            <option value="" disabled selected>Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="TCKN" class="form-label">TCKN</label>
                        <input type="text" id="TCKN" name="TCKN" class="form-control" placeholder="TCKN" required />
                    </div>
                    <div class="mb-3">
                        <label for="DateOfBirth" class="form-label">Date of Birth</label>
                        <input type="date" id="DateOfBirth" name="DateOfBirth" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="CheckInDate" class="form-label">Check-In Date</label>
                        <input type="date" id="CheckInDate" name="CheckInDate" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="CheckOutDate" class="form-label">Check-Out Date</label>
                        <input type="date" id="CheckOutDate" name="CheckOutDate" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary w-100">Add Reservation</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
