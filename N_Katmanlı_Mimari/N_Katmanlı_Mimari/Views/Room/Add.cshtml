@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using EntityLayer.Concrete
@model Room

<form action="/Room/Add" method="post">
    <h2>Add Room</h2>

    <div class="mb-3">
        <label asp-for="RoomNumber" class="form-label">Room Number</label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RoomType" class="form-label">Room Type</label>
        <input asp-for="RoomType" class="form-control" />
        <span asp-validation-for="RoomType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label">Stock</label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Is Active</label>
        <div>
            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" type="radio" value="true" id="activeTrue" />
                <label class="form-check-label" for="activeTrue">Yes</label>
            </div>
            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" type="radio" value="false" id="activeFalse" />
                <label class="form-check-label" for="activeFalse">No</label>
            </div>
        </div>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Room</button>
</form>
