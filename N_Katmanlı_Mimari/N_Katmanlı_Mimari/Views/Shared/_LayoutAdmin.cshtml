<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        #wrapper {
            flex: 1;
            display: flex;
            flex-direction: row;
        }

        #page-content-wrapper {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .container-fluid {
            flex-grow: 1;
        }

        .footer {
            margin-top: auto;
        }
    </style>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark border-end" id="sidebar-wrapper" style="min-width: 250px;">
            <div class="sidebar-heading text-white text-center py-4">
                <h3>Admin Panel</h3>
            </div>
            <div class="list-group list-group-flush">
                <a href="/User/GetAll" class="list-group-item list-group-item-action bg-dark text-white">User List</a>
                <a href="/Reservation/GetAll" class="list-group-item list-group-item-action bg-dark text-white">Rezervations</a>
                <a href="/Product/GetAll" class="list-group-item list-group-item-action bg-dark text-white">Product List</a>
                <a href="/Room/GetAll" class="list-group-item list-group-item-action bg-dark text-white">Room List</a>
                <a href="/Admin/Settings" class="list-group-item list-group-item-action bg-dark text-white">Ayarlar</a>
                <a href="/Admin/Logout" class="list-group-item list-group-item-action bg-dark text-white">Çıkış Yap</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-dark" id="menu-toggle">Toggle Menu</button>
                    <h3 class="ms-3">@ViewData["Title"]</h3>
                    <button class="btn btn-outline-dark ms-auto" type="button">
                        <i class="fas fa-user"></i> Profil
                    </button>
                </div>
            </nav>

            <div class="container-fluid mt-4">
                @RenderBody()
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>

    <!-- Footer -->
    <footer class="footer text-center bg-light py-3">
        <p>&copy; 2024 Havalimanı Otel Admin Panel. Tüm Hakları Saklıdır.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/admin.js" asp-append-version="true"></script>
    <script>
        // Sidebar toggle function
        var menuToggle = document.getElementById("menu-toggle");
        var wrapper = document.getElementById("wrapper");
        menuToggle.addEventListener("click", function () {
            wrapper.classList.toggle("toggled");
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
