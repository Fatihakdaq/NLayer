@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="content" style="width: 400px; margin: 5% auto;">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="title">Ürün Ekle</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label for="FullName">FullName</label>
                        <input type="text" id="FullName" name="FullName" class="form-control" placeholder="FullName" />
                    </div>
                    <div class="mb-3">
                        <label for="Email">Email</label>
                        <input type="email" id="Email" name="Email" class="form-control" placeholder="Email" />
                    </div>
                    <div class="mb-3">
                        <label for="Password">Password</label>
                        <input type="Password" id="Password" name="Password" class="form-control" placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary w-25">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
